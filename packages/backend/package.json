{
  "name": "backend",
  "version": "1.0.0",
  "description": "Bitcoin address generator backend",
  "author": "Joe.Zhou",
  "license": "ISC",
  "private": true,
  "main": "./build/index.js",
  "scripts": {
    "start": "node ./build/index.js",
    "dev": "ts-node src/index.ts",
    "copy-config": "mkdir -p build/api && cp -a src/api/swagger.yaml build/api/swagger.yaml && mkdir -p build/config && cp -a src/config/*.json build/config/",
    "build": "copy-config && tsc -p ./tsconfig.json",
    "clean": "rimraf build *.tsbuildinfo",
    "test": "mocha --recursive --exit --require ts-node --require source-map-support/register './src/**/*.test.{ts,js}'"
  },
  "dependencies": {
    "@types/bech32": "^1.1.2",
    "bitcoin-ops": "^1.4.1",
    "connect": "^3.7.0",
    "js-yaml": "^3.14.0",
    "log4js": "^6.3.0",
    "pushdata-bitcoin": "^1.0.1",
    "randombytes": "^2.1.0",
    "swagger-tools": "^0.10.4",
    "tiny-secp256k1": "^1.1.4",
    "secp256k1": "^4.0.1",
    "crypto-hashing": "^1.0.0",
    "crypto-js": "^4.0.0",
    "eckey-util": "^1.0.4",
    "bstring": "^0.3.9",
    "bufio": "^1.0.7",
    "bs58check": "^2.1.2"
  },
  "devDependencies": {
    "@types/connect": "^3.4.33",
    "@types/js-yaml": "^3.12.5",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.1",
    "@types/swagger-tools": "^0.10.6",
    "mocha": "^7.2.0",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2"
  }
}
